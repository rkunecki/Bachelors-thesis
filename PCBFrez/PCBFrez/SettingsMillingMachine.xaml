<Window x:Class="PCBFrez.SettingsMillingMachine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfiguracja frezarki" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
            <TextBlock Margin="20">Ilość kroków na 1mm:</TextBlock>
        </StackPanel>
        
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <TextBox Name="TB_steps" Margin="20"/>
        </StackPanel>

        <Button Name="buttonOK_SettingsPort" Margin="57,10,54,10" Grid.Column="0" Grid.Row="1" FontSize="12" Click="buttonOK_SettingsPort_Click">Zatwierdź</Button>
        <Button Name="buttonCancel_SettingsPort" Margin="25,10,40,10" Grid.Column="1" Grid.Row="1" FontSize="12" Click="buttonCancel_SettingsPort_Click">Anuluj</Button>
    </Grid>
</Window>
